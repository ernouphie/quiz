<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="569dp"
        android:layout_height="831dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.734"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8"
        app:srcCompat="@drawable/bgbot" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="194dp"
        android:layout_height="50dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="183dp"
        android:layout_marginBottom="585dp"
        android:fontFamily="@font/averia_libre_bold"
        android:text="Categories"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="348dp"
        android:layout_height="511dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button_category_animals"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/animals"
                android:fontFamily="@font/averia_sans_libre"
                android:text="Animals"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_category_gaming"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/gaming"
                android:fontFamily="@font/averia_sans_libre"
                android:text="Gaming"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_category_geography"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/geography"
                android:fontFamily="@font/averia_sans_libre"
                android:text="Geography"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_category_history"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/history"
                android:fontFamily="@font/averia_sans_libre"
                android:text="History"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_category_music"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/music"
                android:fontFamily="@font/averia_sans_libre"
                android:text="Music"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>